<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Login and Signup -->

    <style name="FormContainer">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="SignUpOrLoginContainer">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SignUpOrLoginContainer.Question">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="SignUpOrLoginContainer.Link">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DoctorOrPatientContainer">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DoctorOrPatientContainer.Question">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Map -->

    <style name="CurrentLocationButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_my_location</item>
    </style>

    <style name="PetTypeSpinnerContainer">
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="ShowOnlyOpenClinicsCheckbox">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <!-- Profile -->

    <style name="ProfileImage">
        <item name="android:src">@drawable/login_bg1</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EditButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <style name="ProfileContentContainer">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="EditProfileButtonContainer">
        <item name="android:weightSum">2</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Pets list -->

    <style name="AddNewPetButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_add_new</item>
    </style>

    <!-- Add new pet -->

    <style name="EditPetEdittext">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_edit</item>
        <item name="android:paddingLeft">11dp</item>
    </style>


    <!-- Clinic details -->

    <style name="ClinicDetailsBg">
        <item name="android:src">@drawable/clinic_bg</item>
        <item name="android:alpha">0.6</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="FavoriteButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_favorite_border</item>
    </style>

    <!-- Common views -->

    <style name="ProfileItemIcon">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ProfileItemText">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
